<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:onClick="showActivitiesPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Activities , Tasks Backstack and Resources"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:onClick="showLifecyclePractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Lifecycle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:onClick="showViewModelPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Viewmodel and state practice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:onClick="showPermissionsPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Permissions Practice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:onClick="showFragmentsPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Fragments Practice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:onClick="showNavigationPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Navigation Components Practice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:onClick="showRecyclerViewPractice"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Recycler view Practice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</ScrollView>